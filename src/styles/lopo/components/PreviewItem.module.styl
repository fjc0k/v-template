@require '../settings';

.preview-item {
  reset: box-model;
  min-height: 28px;
  display: flex;
  justify-content: space-between;
  line-height: 1.5;
  padding: $v-spacing-xs $h-spacing-lg $v-spacing-xs 0;
  font-size: $font-size-subhead;
  color: $color-text-caption;
  &:not(.plain):first-child {
    padding-bottom: $v-spacing-md + $v-spacing-xs;
    hairline(bottom);
    .value {
      font-size: $font-size-caption;
      color: $color-text-base;
    }
    + .preview-item {
      padding-top: $v-spacing-md + $v-spacing-xs;
    }
  }
}

.title {
  flex-shrink: 0;
  width: 4em;
  text-align: justify;
  text-align-last: justify;
  height: 1.5em;
  overflow: hidden;
  &:after{
    content: '';
    display: inline-block;
    overflow: hidden;
    width: 100%;
    height: 0;
  }
}

.value {
  text-align: right;
  text-wrap: true;
  .title + & {
    margin-left: $h-spacing-lg;
  }
}
