@require '../settings';

.toast {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: $font-size-base;
  min-width: 60px;
  max-width: 200px;
  border-radius: $radius-sm;
  color: white;
  background-color: rgba(58, 58, 58, 0.9);
  line-height: 1.5;
  padding: $v-spacing-md $h-spacing-lg;
  &.top {
    margin-top: $v-spacing-sm;
  }
  &.bottom {
    margin-bottom: $v-spacing-sm;
  }
  &.with-icon {
    min-width: 90px;
    min-height: 90px;
  }
  &.no-message {
    .icon {
      font-size: 42px;
    }
  }
  .icon {
    font-size: 38px;
    padding: $v-spacing-xs $h-spacing-sm;
    + .message {
      margin-top: $v-spacing-sm;
    }
  }
}
