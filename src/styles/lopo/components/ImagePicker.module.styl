@require '../settings';

.image-picker {
  padding: $v-spacing-md $h-spacing-md 0;
  margin-bottom: $h-spacing-lg;
}

.list {
  display: flex;
  margin-bottom: $v-spacing-sm;
}

.item {
  flex: 1;
  position: relative;
  box-sizing: border-box;
  margin-right: 5px;

  &:after {
    display: block;
    content: '';
    padding-bottom: 100%;
  }

  &:last-child {
    margin-right: 0;
  }
}

.content {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: $radius-sm;
  flex-center: true;
}

.remove {
  font-size: 14px;
  position: absolute;
  right: 6px;
  top: 6px;
  background: rgba(black, 50%);
  color: white;
  padding: 2px;
  border-radius: 50%;
  box-sizing: border-box;
  z-index: 1;
}

.select {
  box-sizing: border-box;
  background-color: $fill-base;
  border: 1PX solid $color-line-light;

  &:active {
    background-color: $fill-tap;
  }

  .add {
    color: $color-text-placeholder;
    width: 40%;
    height: 40%;
  }

  .input {
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    opacity: 0;
  }
}
