@require '../settings';

.price {
  reset: base;
  display: inline-flex;
  align-items: baseline;
  color: #F42020;
  font-size: $font-size-heading;
  &.deleted {
    position: relative;
    color: $color-text-caption;
    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      width: 100%;
      height: 1PX;
      background-color: darken($color-text-caption, 60%);
      transform: translateY(-50%) scaleY(.5);
      transform-origin: 0 0;
    }
  }
}

.symbol {
  margin-right: $h-spacing-xs;
  &.top {
    font-size: 0.6em;
    align-self: flex-start;
    line-height: 1.1;
  }
  &.bottom {
    font-size: 0.6em;
  }
}

.decimal {
  &.small {
    font-size: 0.6em;
  }
}
