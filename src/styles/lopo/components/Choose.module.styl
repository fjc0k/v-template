@require '../settings';

.choose {
  reset: base;
  position: relative;
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
  color: $color-primary;
  &.block {
    display: flex;
  }
  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
}

// 选择器
.input {
  reset: input;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

// 美化容器
.holder {
  reset: box-model;
  flex-shrink: 0;
  position: relative;
  size: $choose-size;
  border: 1PX solid $color-line-dark;
  &.circle {
    border-radius: $radius-circle;
  }
  &:after {
    reset: box-model;
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
  }
  .input:checked + & {
    border-color: currentColor;
    &.radio {
      &:after {
        size: 8px;
        border-radius: $radius-circle;
        background-color: currentColor;
      }
      &.square:after {
        border-radius: 0;
      }
    }
    &.checkbox {
      background-color: currentColor;
      &:after {
        top: -4px;
        width: 6px;
        height: 12px;
        border-style: solid;
        border-width: 0 1px 1px 0;
        border-color: white;
        transform: rotate(45deg);
        z-index: 1;
      }
    }
  }
}

// 标签
.label {
  reset: font;
  font-size: $font-size-caption;
  margin-left: $h-spacing-sm;
}
